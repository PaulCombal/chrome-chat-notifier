{
    "manifest_version": 3,
    "name": "Chat notifier",
    "version": "2023.08.03",
    "description": "Never miss a message from your boss",
    "icons": {
        "16": "images/icon-16.png",
        "32": "images/icon-32.png",
        "48": "images/icon-48.png",
        "128": "images/icon-128.png"
    },
    "content_scripts": [
        {
            "js": [
                "scripts/content.js"
            ],
            "matches": [
                "https://mail.google.com/mail/*",
                "https://chat.google.com/*"
            ],
            "all_frames": true
        }
    ]
}